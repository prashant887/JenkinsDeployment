pipeline {
agent { label 'master' }
  options { timestamps () }
    parameters {
        choice(name: 'VERSION', choices: ['1.1.0', '1.2.0', '1.3.0'], description: '')
        booleanParam(name: 'executeTests', defaultValue: true, description: '')
        stringParam(name: 'DOCKER_TARGETS', defaultValue: "", description: ' Space delimited list of Docker targets. Must have Dockerbuild.TARGET files in the same directory of the Dockerfile '),

    }
    stages {
        stage("init") {
            steps {
                echo "Init" 
                echo "$VERSION"
            }
        }
        stage("build") {
            steps {
                echo "Build"
                echo "$DOCKER_TARGETS"
            }
        }
       
        }
}
